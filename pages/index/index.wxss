page{
  margin-bottom: 50px;
  
  /* background-color: #ebebf1; */
}

.top {
  background-color: #0082DC;
}
.content {
  padding-right: 30rpx;
}

.location {
  display: flex;
  justify-content: left;
  font-size: 12px;
  color:white;
}
.location .icon {
  margin-left: 25rpx;
}
.searchInput {
  width:750rpx;
  padding: 10px 25rpx; 
  box-sizing: border-box;
  font-size:12px;

}
.searchInput input {
  padding: 2px  10px;
  justify-content: left;
  border:1px solid #eee;
  border-radius: 20px;
  font-size: 20px;
  background-color: white;
}



.nearestStationList{
  height:40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:15px;
  margin-left: 25rpx;
  border-bottom: 2px solid #EBEBF1;
  overflow: hidden;
}
.nearestStationList_name {
  font-size: 15px;
}
.nearestStationList_icon {
  font-size:20px;
  color:#0082DC;
  margin-right:10px;
}
.nearestStationList_info {
  display: flex;
  align-items:  flex-start;
}
.nearestStationList_distance {
  font-size: 15px;
  color:#0082DC;
}

.lineList {
  position: relative;
  margin-left: 25rpx;
  margin-top: 8px;
  border-bottom: 2px solid #EBEBF1;
}

.move {
  position: absolute;
  left:0;
  top:0;
}

.lineList image {
  width:40px;
  height:20px;
}

.line_name {
  display: flex; 
  justify-content: space-between;
  font-size: 15px;
}
.line_name .jiage {
  font-size:12px;
  color:#727272;
}
.line_price {
  font-size:12px;
  color:#727272;
  /* text-align: left; */
}
.line_price text {
  width: 60px;
  height: 20px;
}
.line_direction {
  font-size:12px;
  color:#727272;
}

.space {
  width:750rpx;
  height:8px;
  background-color: #EBEBF1;
}

.direction_icon {
  width:20px;

}
.direction_icon image {
  width: 100%;
}

.hide_bus_icon {
  position: absolute;
  right: 0px;
  width:50px;
  height:30px;
  background-color: white;
}

.otherStationList {

  margin-left: 25rpx;
  border-bottom: 2px solid #EBEBF1;
}

.other_name_list {
  display:flex;
  justify-content:space-between;
  font-size:15px;
  
}
.otherStationList_info {
  height:40px;
  align-items:center;

  

}
.otherStationList_items {
  position: relative;
  border-bottom: 2px solid #EBEBF1;
}

.otherStationList_distance {
 font-size:15px;
 position: absolute;
 right: 30rpx;
 color:#0082DC;
}
.other_name {
  font-size:15px;
}
.other_price,.other_direction {
  font-size:12px;
  color:#727272;
}
.runTime {
  position: absolute;
  right:0;
  top:16px;
  font-size:12px;
}

.show {
  display: block;
}
.hide {
  display: none;
}

/* 刷新 */
.view{
    position: fixed ! important ; 
    height:50px;
    width:50px;
    border-radius:2rem;
    color: white;
    text-align: center;
    line-height: 30px;
    z-index:999; 
    
}




