/* pages/search/search.wxss */
page {
  background-color: #EBEBF1;
}
/* 查询公交路线搜索框 */
#search {
  width: 100%;
  height: 50px;
  padding: 10px 15px;
  background-color: #3045d0;
  box-sizing: border-box;
  position: relative;
}
#search icon {
  position: absolute;
  left: 30px;
  top: 20px;
}
#search view {
  height: 30px;
  color: #999;
  font-size: 12px;
  padding: 0 30px;
  line-height: 30px;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 15px;
}


/* 路线规划部分 */
#box {
  background-color: #fff;
  margin-top: 10px;
}

#box .weizhi {
  padding: 0 15px;
  position: relative;
}
/* 文本输入框 */
#box .weizhi input {
  font-size: 16px;
  height: 38px;
  border-bottom: 1px solid #f0f0f0;
  padding: 0 30px;
  box-sizing: border-box;
}
/* 左右图标样式 */
#box .weizhi .quan {
  width: 24px;
  height: 75px;
  position: absolute;
  top: 0;
  left: 15px;
}
#box .weizhi .quan image {
  width: 100%;
  height: 100%;
}
#box .weizhi #zhuan {
  width: 40px;
  height: 74px;
  position: absolute;
  top: 0;
  right: 15px;
}
#box .weizhi #zhuan image {
  width: 100%;
  height: 100%;
}

/* 规划按钮 */
#box .btn {
  height: 30px;
  padding: 10px 0;
  text-align: center;
}
#box .btn button {
  width: 100px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #fff;
  background-color: #3765ff;
}
#box .btns button {
  box-shadow: 0px 0px 2px rgba(0,0,0,.5);
  background-color: #3755ff;
}

/* 查询结果返回区域 */
scroll-view {
  margin-top: 10px;
  padding: 0 15px;
  background-color: #fff;
}
scroll-view .tipInfo {
  height: 50px;
  border-bottom: 1px solid #f0f0f0;
}
scroll-view .tipInfo .backInfo {
  color: #888;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
scroll-view .tipInfo .name {
  color: red;
  font-size: 16px;
  line-height: 25px;
  height: 25px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}
scroll-view .tipInfo .backInfo .district {
  font-size: 12px;
}
scroll-view .tipInfo .address {
  color: #888;
  font-size: 10px;
  height: 24px;
  line-height: 24px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}